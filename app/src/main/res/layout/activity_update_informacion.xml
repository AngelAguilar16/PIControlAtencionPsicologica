<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInformacionActivity">

    <EditText
        android:id="@+id/txtName_Update"
        android:layout_width="307dp"
        android:layout_height="40dp"
        android:layout_marginBottom="384dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPaciente_AddPaciente"
        app:layout_constraintVertical_bias="0.118" />

    <EditText
        android:id="@+id/txtTelefono_Update"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:layout_marginBottom="144dp"
        android:ems="10"
        android:hint="Numero de Telefono"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMaterno_AddPacientes"
        app:layout_constraintVertical_bias="0.175" />

    <EditText
        android:id="@+id/txtMaterno_Update"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:hint="Apellido Materno"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPaterno_AddPacientes"
        app:layout_constraintVertical_bias="0.265" />

    <EditText
        android:id="@+id/txtPaterno_Update"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:layout_marginBottom="216dp"
        android:ems="10"
        android:hint="Apellido Paterno"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName_AddPaciente"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/btnUpdatePaciente"
        android:layout_width="172dp"
        android:layout_height="68dp"
        android:layout_marginBottom="40dp"
        android:text="Actualizar InformaciÃ³n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefono_AddPacientes" />

    <ImageView
        android:id="@+id/imgPaciente_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>